<div id="header">
	<a href="<%= home_path %>" class="logo">
		<img src="<%= image_path('logo.jpg')%>">
	</a>
</div>
<div class="all">
	<div class="nav">
		<ul>
			<li><%= link_to "Home", home_path %></li>
			<li><%= link_to "About", about_path %></li>
			<% if account_signed_in? %>
                <% if current_account.status==1 %>
                    <li><%= link_to "Manage", dashboard_path %></li>
                <% else %>
                    <li><%= link_to "Profil", user_path(current_account) %></li>
                <% end %>
            <% else %>
                <li><%= link_to "Login", login_path %></li>
            <% end %>
		</ul>
	</div>
<div id="body">
<h1><span>Sign Up</span></h1>
</div>
<%= form_for(@user) do |f| %>
<div style="border:2px solid black;border-radius: 5px;width:80%;margin: auto;"><br>
	<% if @user.errors.any? %>
	<div style="color: red;font-style: bold;text-align: center;">
		<% @user.errors.full_messages.each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>
	<% end %>
	<div style="text-align: center;font-size: 16px;font-weight: bold">
		<%= f.label :Nama %><br>
		<%= f.text_field :nama %>
	</div><br>
	<div style="text-align: center;font-size: 16px;font-weight: bold">
		<%= f.label :'No HP' %><br>
		<%= f.text_field :nohp %>
	</div><br>
	<div style="text-align: center;font-size: 16px;font-weight: bold">
		<%= f.label :Username %><br>
		<%= f.text_field :username %>
	</div><br>
	<div style="text-align: center;font-size: 16px;font-weight: bold">
		<%= f.label :Password %><br>
		<%= f.password_field :password %>
	</div><br>
	<% if account_signed_in? %>
	<% if current_account.status==1 %>
	<div style="text-align: center;font-size: 16px;font-weight: bold">
		<%= f.label :'Mendaftar Sebagai :' %><br>
		<%= select_tag('user[status]', options_for_select([['Admin', 1], ['Member', 0]])) %>
	</div><br>
	<% end %>
	<% end %>
	<div class="button" style="text-align: center;font-size: 16px;font-weight: bold">
		<%= f.submit "Daftar" %>
	</div>
</div>
<% end %>

<div class="button" style="width:80%;margin: auto;margin-top: 15px;">
	<% if account_signed_in? %>
		<% if current_account.status==1 %>
			<%= link_to 'Kembali', users_path, class:'button' %>
		<% end %>
	<% else %>
		<%= link_to 'Kembali', login_path, class:'button' %>
	<% end %>
</div>
</div>
<div id="footer">
    <div>
        <p>&copy; 2017 Achtzehn</p>
    </div>
</div>