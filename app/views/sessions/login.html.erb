<div id="header">
	<a href="<%= home_path %>" class="logo">
		<img src="<%= image_path('logo.jpg')%>">
	</a>
</div>
<div class="all">
	<div class="nav">
		<ul>
			<li><%= link_to "Home", home_path %></li>
			<li><%= link_to "About", about_path %></li>
			<% if account_signed_in? %>
                <% if current_account.status==1 %>
                    <li><%= link_to "Manage", dashboard_path %></li>
                <% else %>
                    <li><%= link_to "Profil", user_path(current_account) %></li>
                <% end %>
            <% else %>
                <li><%= link_to "Login", login_path %></li>
            <% end %>
		</ul>
	</div>
<div id="body">
<h1><span>Log In</span></h1>
</div>
<%= form_for(:session, url: validate_path) do |f| %>
<div style="border:2px solid black;border-radius: 5px;width:80%;margin: auto;"><br>
	<% if @user.errors.any? %>
	<div style="color: red;font-style: bold;text-align: center;">
		<% @user.errors.full_messages.each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>
	<% end %>
	<div style="text-align: center;font-size: 16px;font-weight: bold">
		<%= f.label :Username %><br>
		<%= f.text_field :username %>
	</div><br>
	<div style="text-align: center;font-size: 16px;font-weight: bold">
		<%= f.label :Password %><br>
		<%= f.password_field :password %>
	</div><br>
	<div class="button" style="text-align: center;font-size: 16px;font-weight: bold">
		<button type="submit">Login</button>
	</div>
</div>
<% end %>
<h3 style="margin-left: 100px;">Ingin mendaftar? Klik <%= link_to "di sini", new_user_path %></h3>
<div class="button" style="width:80%;margin: auto;margin-top: 20px;">
	<%= link_to 'Kembali', home_path, class:'button' %>
</div>
</div>
<div id="footer">
    <div>
        <p>&copy; 2017 Achtzehn</p>
    </div>
</div>