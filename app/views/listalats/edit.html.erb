<div id="header">
	<a href="<%= home_path %>" class="logo">
		<img src="<%= image_path('logo.jpg')%>">
	</a>
</div>
<div class="all">
	<div class="nav">
		<ul>
			<li><%= link_to "Home", home_path %></li>
			<li><%= link_to "About", about_path %></li>
			<% if account_signed_in? %>
                <% if current_account.status==1 %>
                    <li><%= link_to "Manage", dashboard_path %></li>
                <% else %>
                    <li><%= link_to "Profil", user_path(current_account) %></li>
                <% end %>
            <% else %>
                <li><%= link_to "Login", login_path %></li>
            <% end %>
		</ul>
	</div>
	<div id="body">
		<h1><span>Daftar Alat</span></h1>
	</div>
	<%= form_for(@listalat) do |l| %>
	<div style="border:2px solid black;border-radius: 5px;width:80%;margin: auto;"><br>
		<% if @listalat.errors.any? %>
	<div style="color: red;font-style: bold;text-align: center;">
		<% @listalat.errors.full_messages.each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>
	<% end %>
	<div style="text-align: center;font-size: 16px;font-weight: bold">
		<%= l.label :'Nama Alat' %><br>
		<%= l.text_field :nama_alat %>
	</div><br>
	<div style="text-align: center;font-size: 16px;font-weight: bold">
		<%= l.label :Jenis %><br>
		<%= select_tag('listalat[jenis]', options_for_select([['Gitar', 'Gitar'], ['Bass', 'Bass'], ['Drum', 'Drum'], ['Keyboard', 'Keyboard'], ['Cymbal', 'Cymbal'], ['Cajon', 'Cajon'], ['Effect', 'Effect'], ['Speaker', 'Speaker']],1)) %>
	</div><br>
	<div style="text-align: center;font-size: 16px;font-weight: bold">
		<%= l.label :Tipe %><br>
		<%= l.text_field :tipe %>
	</div><br>
	<div style="text-align: center;font-size: 16px;font-weight: bold">
		<%= l.label :'Harga Sewa' %><br>
		<%= l.text_field :harga_sewa %>
	</div>
	<div class="button" style="text-align: center;font-size: 16px;font-weight: bold">
		<%= l.submit "Submit" %>
	</div>
</div>
<% end %>

<div class="button" style="width:80%;margin: auto;margin-top: 15px;">
	<%= link_to 'Kembali', listalats_path, class:'button' %>
</div>
</div>
<div id="footer">
    <div>
        <p>&copy; 2017 Achtzehn</p>
    </div>
</div>